{
  "name": "hakre/pcre.php",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://github.com/hakre/pcre.php",
  "description": "CLI utility for PCRE pattern search and replace through list of files",
  "keywords": ["cli", "pcre", "files", "utility", "regex"],
  "require": {
    "php": "^7.1"
  },
  "bin": ["pcre.php"],
  "scripts": {
    "build": [
      "@test",
      "@php scripts/build.php"
    ],
    "lint": [
      "@composer validate --strict",
      "@php -l pcre.php",
      "@php -l scripts/build.php"
    ],
    "package": [
      "@build",
      "git diff --cached --quiet # no uncommitted changes",
      "git archive -o hakre-pcre.php-$(git describe --tags --always --first-parent).tar.gz HEAD",
      "shasum -a512 hakre-pcre.php*.tar.gz"
    ],
    "test": [
      "@lint",
      "tests/smoke.sh"
    ]
  }
}
